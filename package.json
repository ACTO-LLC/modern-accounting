{
  "name": "modern-accounting-system",
  "version": "1.0.0",
  "description": "Modern Double-Entry Accounting System",
  "scripts": {
    "start": "concurrently -n docker,api,client -c blue,yellow,green \"npm run start:docker\" \"npm run start:api\" \"npm run start:client\"",
    "start:docker": "docker compose up",
    "start:api": "cd chat-api && npm start",
    "start:client": "cd client && npm run dev",
    "stop": "docker compose down",
    "dev": "concurrently -n api,client -c yellow,green \"npm run start:api\" \"npm run start:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:api": "cd chat-api && npm start",
    "dev:docker": "docker compose up -d",
    "test": "cd client && npx playwright test"
  },
  "keywords": [
    "accounting",
    "dab",
    "react",
    "azure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "mssql": "^12.2.0"
  }
}
