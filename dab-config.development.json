{
    "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.0.0/dab.draft.schema.json",
    "data-source": {
        "database-type": "mssql",
        "connection-string": "@env('DAB_CONNECTION_STRING')",
        "options": {
            "set-session-context": false
        }
    },
    "runtime": {
        "host": {
            "mode": "development",
            "cors": {
                "origins": [
                    "http://localhost:5173",
                    "http://localhost:5179"
                ],
                "allow-credentials": true
            },
            "authentication": {
                "provider": "Simulator"
            }
        }
    }
}
